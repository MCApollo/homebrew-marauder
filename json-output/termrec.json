{
    "name": "Termrec",
    "description": "Record videos of terminal output",
    "url": "https://github.com/kilobyte/termrec/archive/v0.18.tar.gz",
    "mirror": null,
    "homepage": "https://angband.pl/termrec.html",
    "depends": [
        {
            "depend": "autoconf",
            "build-depend": true
        },
        {
            "depend": "automake",
            "build-depend": true
        },
        {
            "depend": "libtool",
            "build-depend": true
        },
        {
            "depend": "xz",
            "build-depend": false
        }
    ],
    "resource": [],
    "conflicts": [],
    "patches": [],
    "install": [
        "system \"./autogen.sh\"",
        "system \"./configure\", \"--disable-debug\",",
        "\"--disable-dependency-tracking\",",
        "\"--disable-silent-rules\",",
        "\"--prefix=#{prefix}\"",
        "system \"make\", \"install\""
    ],
    "version": "0.18"
}