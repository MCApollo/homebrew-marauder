{
    "name": "Libdill",
    "description": "Structured concurrency in C",
    "url": "https://github.com/sustrik/libdill/archive/2.13.tar.gz",
    "mirror": null,
    "homepage": "http://libdill.org/",
    "depends": [
        {
            "depend": "autoconf",
            "build-depend": true
        },
        {
            "depend": "automake",
            "build-depend": true
        },
        {
            "depend": "libtool",
            "build-depend": true
        }
    ],
    "resource": [],
    "conflicts": [],
    "patches": [],
    "install": [
        "system \"./autogen.sh\"",
        "system \"./configure\", \"--disable-debug\",",
        "\"--disable-dependency-tracking\",",
        "\"--disable-silent-rules\",",
        "\"--prefix=#{prefix}\"",
        "system \"make\", \"install\""
    ],
    "version": "2.13"
}