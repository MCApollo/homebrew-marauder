{
    "name": "Angband",
    "description": "Dungeon exploration game",
    "url": "https://rephial.org/downloads/4.1/angband-4.1.3.tar.gz",
    "mirror": null,
    "homepage": "https://rephial.org/",
    "depends": [
        {
            "depend": "autoconf",
            "build-depend": true
        },
        {
            "depend": "automake",
            "build-depend": true
        }
    ],
    "resource": [],
    "conflicts": [],
    "patches": [],
    "install": [
        "ENV[\"NCURSES_CONFIG\"] = \"#{MacOS.sdk_path}/usr/bin/ncurses5.4-config\"",
        "system \"./autogen.sh\"",
        "system \"./configure\", \"--prefix=#{prefix}\",",
        "\"--bindir=#{bin}\",",
        "\"--libdir=#{libexec}\",",
        "\"--enable-curses\",",
        "\"--disable-ncursestest\",",
        "\"--disable-sdltest\",",
        "\"--disable-x11\",",
        "\"--with-ncurses-prefix=#{MacOS.sdk_path}/usr\"",
        "system \"make\"",
        "system \"make\", \"install\""
    ],
    "version": "4.1.3"
}