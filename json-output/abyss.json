{
    "name": "Abyss",
    "description": "Genome sequence assembler for short reads",
    "url": "https://github.com/bcgsc/abyss/releases/download/2.1.5/abyss-2.1.5.tar.gz",
    "mirror": null,
    "homepage": "http://www.bcgsc.ca/platform/bioinfo/software/abyss",
    "depends": [
        {
            "depend": "autoconf",
            "build-depend": true
        },
        {
            "depend": "automake",
            "build-depend": true
        },
        {
            "depend": "multimarkdown",
            "build-depend": true
        },
        {
            "depend": "boost",
            "build-depend": true
        },
        {
            "depend": "google-sparsehash",
            "build-depend": true
        },
        {
            "depend": "gcc",
            "build-depend": false
        },
        {
            "depend": "open-mpi",
            "build-depend": false
        }
    ],
    "resource": [],
    "conflicts": [],
    "patches": [],
    "install": [
        "system \"./autogen.sh\" if build.head?",
        "system \"./configure\", \"--enable-maxk=128\",",
        "\"--prefix=#{prefix}\",",
        "\"--with-boost=#{Formula[\"boost\"].include}\",",
        "\"--with-mpi=#{Formula[\"open-mpi\"].prefix}\",",
        "\"--with-sparsehash=#{Formula[\"google-sparsehash\"].prefix}\",",
        "\"--disable-dependency-tracking\",",
        "\"--disable-silent-rules\"",
        "system \"make\", \"install\""
    ],
    "version": "2.1.5"
}